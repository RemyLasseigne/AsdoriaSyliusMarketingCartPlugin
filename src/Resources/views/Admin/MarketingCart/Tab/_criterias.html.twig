{% form_theme form '@SyliusAdmin/Product/Attribute/attributesCollection.html.twig' %}

<div class="ui tab" data-tab="criteria">
    <h3 class="ui top attached header">{{ 'asdoria.ui.search'|trans }}</h3>
    <div class="ui attached segment">
        {{ form_row(form.criteria) }}
    </div>

    <div class="ui divider"></div>

    <h3 class="ui top attached header">{{ 'sylius.ui.taxons'|trans }}</h3>
    <div class="ui attached segment">
        {{ form_row(form.taxons, {label: ' '}) }}
    </div>

    <div class="ui divider"></div>

    <h3 class="ui top attached header">{{ 'sylius.ui.attributes'|trans }}</h3>
    <div class="ui attached segment">
        {{ render(url('asdoria_admin_marketing_cart_product_attributes')) }}
        <div id="attributesContainer" data-count="{{ form.attributes|length }}">
            {{ form_widget(form.attributes, {'attr': {'translations': form.translations} }) }}
        </div>

        {{ sylius_template_event(['asdoria.admin.marketing_cart.' ~ action ~ '.tab_attributes', 'asdoria.admin.marketing_cart.tab_attributes'], {'form': form}) }}
    </div>
</div>
